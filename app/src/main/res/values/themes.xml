<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Design" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/Theme.Design.TextView</item>

    </style>
    
        <style name="Theme.Design.TextView" parent="Widget.MaterialComponents.TextView">
            <item name="android:textColor">@color/my_colour_for_text</item>
        </style>

    <style name="Theme.Design.WiFi" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="Theme.Design.OutLinerButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:text">bold</item>
    </style>


</resources>